<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:fillViewport="true"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:scrollbarStyle="outsideOverlay"
    android:scrollbars="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:focusable="true"
        android:focusableInTouchMode="true">

        <LinearLayout
            android:id="@+id/firstLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/feeLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/fee_dashboard">

                <ImageView
                    android:id="@+id/imgFee"
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/countFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/imgFee"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="150"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textFee"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countFee"
                    android:layout_toEndOf="@+id/imgFee"
                    android:gravity="center_horizontal"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="10dp"
                    android:text="New Orders"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/expenseLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/expenses_dashboard">

                <ImageView
                    android:id="@+id/imgExpenses"
                    android:layout_width="90dp"
                    android:layout_height="150dp"
                    android:src="@drawable/rupee" />

                <TextView
                    android:id="@+id/countExpenses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_toEndOf="@+id/imgExpenses"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="323"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textLead"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countExpenses"
                    android:layout_toEndOf="@+id/imgExpenses"
                    android:gravity="center_horizontal"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="10dp"
                    android:text="Monthly Expenses"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/secondLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/firstLayout"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:weightSum="2">

            <RelativeLayout
                android:id="@+id/studentLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/student_dashboard"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/imgStudent"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:src="@drawable/student" />

                <TextView
                    android:id="@+id/countStudent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/imgStudent"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="488"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textClosedProjects"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countStudent"
                    android:layout_toEndOf="@+id/imgStudent"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="Students"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/teacherLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="2dp"
                android:layout_weight="1"
                android:background="@color/teacher_dashboard"
                android:paddingTop="16dp">

                <ImageView
                    android:id="@+id/imgTeacher"
                    android:layout_width="80dp"
                    android:layout_height="150dp"
                    android:src="@drawable/teacher" />

                <TextView
                    android:id="@+id/countTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toEndOf="@+id/imgTeacher"
                    android:gravity="center_horizontal"
                    android:padding="10dp"
                    android:text="488"
                    android:textColor="#FFF"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textTeacher"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/countTeacher"
                    android:layout_toEndOf="@+id/imgTeacher"
                    android:gravity="center_horizontal"
                    android:paddingEnd="2dp"
                    android:paddingStart="2dp"
                    android:paddingTop="10dp"
                    android:text="Teacher"
                    android:textColor="#FFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </RelativeLayout>

        </LinearLayout>

        <com.jjoe64.graphview.GraphView
            android:id="@+id/graph"
            android:layout_width="match_parent"
            android:layout_height="300dip"
            android:layout_below="@+id/secondLayout"
            android:layout_margin="10dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/pms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="20dp"
            android:background="@color/sms"
            android:elevation="5dp"
            android:gravity="center"
            android:padding="15dp"
            android:text="@string/sms"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:visibility="gone" />


    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>