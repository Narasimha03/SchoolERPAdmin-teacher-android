<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">
            <!--   <TextView
                   android:text="Hello"
                   android:id="@+id/studentName"
                   android:layout_width="match_parent"
                   android:gravity="center"
                   android:background="@android:color/transparent"
                   android:layout_alignParentTop="true"
                   android:textSize="16sp"
                   android:textColor="@color/colorPrimary"
                   android:layout_height="wrap_content" />-->

            <ProgressBar
                android:id="@+id/progress"
                android:layout_width="match_parent"
                android:layout_centerInParent="true"
                android:layout_height="50dp"

                android:visibility="visible" />
            <ImageView
                android:id="@+id/imgShow"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/assignment"
                android:layout_height="300dp"
                android:adjustViewBounds="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center_vertical"
                />

            <TextView
                android:id="@+id/studentName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:gravity="left"
                android:textColor="#fff"
                android:text="Suresh"
                android:padding="12dp"
                android:textSize="18dp"
                android:background="@drawable/image_gradient"
                android:layout_centerHorizontal="true" />
            <TextView
                android:id="@+id/pAdmNo"
                android:layout_width="match_parent"
                android:text="admNO"
                android:layout_below="@+id/imgShow"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pClass"
                android:layout_width="match_parent"
                android:text="Class"
                android:layout_below="@+id/pAdmNo"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pGender"
                android:layout_width="match_parent"
                android:text="Gender"
                android:layout_below="@+id/pClass"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pCategory"
                android:layout_width="match_parent"
                android:text="Category"
                android:layout_below="@+id/pGender"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pContact"
                android:layout_width="match_parent"
                android:text="Contact"
                android:layout_below="@+id/pCategory"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/pSection"
                android:layout_width="match_parent"
                android:text="Section"
                android:layout_below="@+id/pContact"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pEmail"
                android:layout_width="match_parent"
                android:text="Email"
                android:layout_below="@+id/pSection"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/pRollNo"
                android:layout_width="match_parent"
                android:text="RollNo"
                android:layout_below="@+id/pEmail"
                android:layout_height="wrap_content" />

        </RelativeLayout>
    </ScrollView>

</FrameLayout>
