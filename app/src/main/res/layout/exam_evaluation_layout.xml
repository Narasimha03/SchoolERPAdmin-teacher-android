                    </LinearLayout>-->

                    <Button
                        android:id="@+id/select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/mainLayout2"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_shape"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Select"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/cardView1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardView"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/addMarkText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingEnd="0dp"
                        android:paddingStart="16dp"
                        android:paddingTop="15dp"
                        android:text="Add Marks"
                        android:textColor="@color/colorAccent"
                        android:paddingLeft="16dp"
                        android:paddingRight="0dp" />

                    <LinearLayout
                        android:id="@+id/marksLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/addMarkText"
                        android:layout_marginTop="5dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Marks Obtained"
                                android:textColor="@color/colorPrimaryDark" />

                            <EditText
                                android:id="@+id/editMarks"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:hint="Marks Obtained"
                                android:inputType="number"
                                android:textSize="15sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingBottom="5dp"
                            android:paddingStart="5dp"
                            android:paddingTop="10dp"
                            android:paddingLeft="5dp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="5dp"
                                android:text="Marks Percentage"
                                android:textColor="@color/colorPrimaryDark" />

                            <EditText
                                android:id="@+id/editPercent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/edittext"
                                android:hint="Marks Percentage"
                                android:inputType="number"
                                android:textSize="15sp" />

                        </LinearLayout>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/titleConduct"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/marksLayout"
                        android:padding="16dp"
                        android:text="Conduct"
                        android:textColor="@color/colorPrimary"
                        android:textSize="15sp" />

                    <Spinner
                        android:id="@+id/conductSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/titleConduct"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp" />

                    <Button
                        android:id="@+id/addMarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/conductSpinner"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_shape"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Add Marks"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />

                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/exam_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/examTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textExamCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="Students"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.25"
                android:src="@drawable/lines_white" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>