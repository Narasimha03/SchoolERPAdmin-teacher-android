<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0E0E0">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/quote_word"
            android:layout_width="match_parent"
            android:layout_height="270dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:id="@+id/quote"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_weight="0.35"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#009688"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Quote for the Day"
                        android:textColor="#fff"
                        android:textSize="17sp" />

                    <TextView
                        android:id="@+id/textQuote"
                        style="@style/TextColorWhite"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="fill"
                        android:background="#26A69A"
                        android:fontFamily="serif"
                        android:gravity="center"
                        android:padding="10dp"
                        android:textSize="18sp"
                        android:textStyle="italic" />

                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/word_day"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.7"
                android:elevation="4dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#E64A19"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="A Word, A Day"
                        android:textColor="#fff"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="#F4511E"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textWord"
                                style="@style/TextColorWhite"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.3"
                                android:padding="8dp"
                                android:textSize="17sp"
                                android:textStyle="bold|italic" />

                            <ImageView
                                android:id="@+id/imgSound"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:adjustViewBounds="true"
                                android:cropToPadding="true"
                                android:padding="5dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_volume_up_black_24dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginBottom="5dp"
                            android:scrollbars="vertical">

                            <android.support.v4.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:id="@+id/wordMeaning"
                                    style="@style/TextColorWhite"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:padding="10dp"
                                    android:textSize="15sp" />

                            </android.support.v4.widget.NestedScrollView>
                        </LinearLayout>

                        <!--<TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:padding="6dp"
                            android:text="More"
                            android:textColor="#fff"
                            android:textSize="13sp"
                            android:textStyle="italic" />-->
                    </LinearLayout>

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/curriculum_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/quote_word"
            android:layout_marginTop="8dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/curriculum"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#6D4C41"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Curriculum for the Day"
                        android:textColor="#fff"
                        android:textSize="17sp" />

                    <include
                        layout="@layout/teacher_curriculum_recycler_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/curriculum" />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attendance_percentage_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/curriculum_layout"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="4dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/attendance_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#607D8B"
                        android:gravity="center"
                        android:padding="5dp"
                        android:text="Current Month Attendance"
                        android:textColor="#fff"
                        android:textSize="17sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_below="@id/attendance_title"
                        android:orientation="vertical">


                        <!--  <com.github.mikephil.charting.charts.PieChart
                              android:id="@+id/teaching_staff_attendance_piechart"
                              android:layout_width="match_parent"
                              android:layout_height="0dp"
                              android:layout_weight="0.8" />-->

                        <com.github.mikephil.charting.charts.PieChart
                            android:id="@+id/attendance_pie"
                            android:layout_width="match_parent"
                            android:layout_height="280dp"
                            android:layout_margin="10dp" />
                    </LinearLayout>

                </RelativeLayout>
            </android.support.v7.widget.CardView>

