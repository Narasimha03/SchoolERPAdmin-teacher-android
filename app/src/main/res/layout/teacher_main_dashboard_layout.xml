                </RelativeLayout>

            </android.support.v7.widget.CardView>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/events"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#00838F"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Events"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <include
                            layout="@layout/teacher_dashboard_events_recycler_layout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/events" />
                    </RelativeLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="4dp"

                    android:layout_weight="1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/notice_board"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#EF5350"
                            android:gravity="center"
                            android:padding="5dp"
                            android:text="Notice Board"
                            android:textColor="#fff"
                            android:textSize="17sp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_below="@id/notice_board"
                            android:orientation="vertical">

                            <include
                                layout="@layout/admin_dashboard_noticeboard_recycler_layout"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent" />
                        </LinearLayout>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</ScrollView>