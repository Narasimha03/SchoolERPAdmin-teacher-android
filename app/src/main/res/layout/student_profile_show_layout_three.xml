                        android:weightSum="1">

                        <TextView
                            android:id="@+id/motherNameTitle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="0.4"
                            android:padding="5dp"
                            android:text="Mother Name:"
                            android:textColor="@color/colorPrimary"
                            android:textSize="16sp" />

                        <TextView
