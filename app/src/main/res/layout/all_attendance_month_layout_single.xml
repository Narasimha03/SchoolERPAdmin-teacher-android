<?xml version="1.0" encoding="utf-8"?>
<com.sothree.slidinguppanel.SlidingUpPanelLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/sliding_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:umanoScrollableView="@id/recycler_view"
    android:background="@android:color/darker_gray"
    android:gravity="bottom"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"

    app:umanoShadowHeight="4dp"

    tools:umanoPanelHeight="0dp"
    android:layout_marginBottom="40dp"
    tools:umanoParallaxOffset="@dimen/nav_header_height">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/cardView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                card_view:cardCornerRadius="5dp"
                card_view:contentPadding="6dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/mainLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <LinearLayout
                            android:id="@+id/classLayout"
                            android:layout_width="0dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleClass"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="Class"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/classSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:layout_marginEnd="16dp"
                                android:backgroundTint="@android:color/black"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/sectionLayout"
                            android:layout_width="0dp"
                            android:layout_margin="3dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleSection"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="Section"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/sectionSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="16dp"
                                android:backgroundTint="@android:color/black"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>

                    </LinearLayout>



                    <LinearLayout
                        android:id="@+id/mainLayout3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/mainLayout"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        android:weightSum="2">



                        <LinearLayout
                            android:id="@+id/studentLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleStudent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="Student"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/studentSpinner"
                                android:layout_width="match_parent"
                                android:backgroundTint="@android:color/black"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/monthLayout"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_margin="3dp"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/titleConduct"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="16dp"
                                android:text="Month"
                                android:textColor="@color/colorPrimary"
                                android:textSize="15sp" />

                            <Spinner
                                android:id="@+id/conductSpinner"
                                android:layout_width="match_parent"
                                android:backgroundTint="@android:color/black"
                                android:layout_height="wrap_content"
                                android:layout_marginEnd="16dp"
                                android:layout_marginStart="16dp" />

                        </LinearLayout>



                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:gravity="end"
                        android:layout_margin="10dp"
                        android:layout_below="@id/mainLayout3"
                        android:layout_height="wrap_content">

                        <FrameLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center">

                            <!--<ImageButton

                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                android:background="@drawable/search_button"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:textAllCaps="false"
                                android:textColor="@color/white" />

                            <ImageView
                                android:layout_width="25dp"
                                android:id="@+id/select"
                                android:layout_height="25dp"
                                android:adjustViewBounds="true"
                                android:layout_gravity="center"
                                android:scaleType="centerCrop"
                                android:src="@drawable/ic_search" />-->
                            <android.support.design.widget.FloatingActionButton
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:layout_width="50dp"
                                android:id="@+id/select"
                                android:layout_gravity="center"
                                android:clickable="true"
                                app:srcCompat="@drawable/ic_search"
                                android:layout_height="50dp"
                                app:backgroundTint="@color/colorPrimary"
                                tools:ignore="VectorDrawableCompat"
                                android:focusable="true" />

                        </FrameLayout>
                    </LinearLayout>


                    <!--<Button
                        android:id="@+id/select"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_below="@+id/mainLayout3"
                        android:layout_marginBottom="5dp"
                        android:layout_marginEnd="5dp"
                        android:background="@drawable/button_shape"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:text="Select"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="5dp" />-->




                </RelativeLayout>

            </android.support.v7.widget.CardView>



        </RelativeLayout>

    </ScrollView>

    <LinearLayout
        android:id="@+id/exam_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/examTitleLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:weightSum="2">

            <TextView
                android:id="@+id/textExamCount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1.75"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="10dp"
                android:text="Students"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/imgLines"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_weight="0.25"
                android:src="@drawable/lines_white" />

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</com.sothree.slidinguppanel.SlidingUpPanelLayout>